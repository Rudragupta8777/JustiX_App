<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/txtCaseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Case Title"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#E8EAF6"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Preparation Guide"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A237E"/>

            <TextView
                android:id="@+id/txtCaseSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Loading strategy..."
                android:maxLines="4"
                android:ellipsize="end"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnStartMeeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Start New VR Session"
        android:backgroundTint="#00C853"
        android:layout_marginTop="24dp"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past Sessions"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMeetings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>