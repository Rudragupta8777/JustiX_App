<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_paper_card"
    android:padding="24dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E0E0"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FULL PERFORMANCE DOSSIER"
        android:textColor="@color/accent_sage_dark"
        android:textSize="14sp"
        android:letterSpacing="0.15"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXECUTIVE SUMMARY"
                android:textSize="12sp"
                android:textColor="@color/accent_sage_dark"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtFullSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="@color/text_ink_primary"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DETAILED FEEDBACK"
                android:textSize="12sp"
                android:textColor="@color/accent_sage_dark"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtFullFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="@color/text_ink_secondary"
                android:textSize="15sp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>